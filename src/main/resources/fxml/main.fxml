<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.scrvrdn.inventory.controller.MainController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu text="File">
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane fx:id="mainSplit" orientation="HORIZONTAL" dividerPositions="0.1,0.8" VBox.vgrow="ALWAYS">
            <items>
                <TreeView fx:id="">
                </TreeView>
                        
                    <ScrollPane fitToWidth="true" fitToHeight="true">
                        <content>
                            <VBox VBox.vgrow="ALWAYS">
                                <ToolBar>
                                    <Button text="New Entry" fx:id="addNewEntryButton" onAction="#handleAddNewEntryButton"/>
                                    <Button text="Delete Entry" fx:id="deleteEntryButton" onAction="#handleDeleteEntryButton"/>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <TextField fx:id="searchField" prefWidth="480" promptText="⌕"/>
                                </ToolBar>
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <Label fx:id="itemsPerPageLabel" text="Items per page:"/>
                                    <ComboBox fx:id="itemsPerPageComboBox" onAction="#handleItemsPerPageSelection"/>
                                </HBox>
                                <TableView fx:id="table" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="id" id='b."id"' text="ID" styleClass="table-column" prefWidth="40"/>
                                        <TableColumn fx:id="authors" id='"authors"' text="Author" styleClass="table-column" prefWidth="150"/>
                                        <TableColumn fx:id="title" id='"title"' text="Title" styleClass="table-column" prefWidth="150"/>
                                        <TableColumn fx:id="editors" id='"editors"' text="Editor" styleClass="table-column" prefWidth="150"/>
                                        <TableColumn fx:id="publisher" id='"publisher"' text="Publisher" styleClass="table-column" prefWidth="150"/>
                                        <TableColumn fx:id="year" id='"year"' text="Year" styleClass="table-column" prefWidth="40"/>
                                        <TableColumn fx:id="shelfMark" id='"shelf_mark"' text="Shelf Mark" styleClass="table-column" prefWidth="100"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER" spacing="5">
                                    <HBox>
                                        <Button fx:id="firstPage" text="|⮜" onAction="#goToFirstPage"/>
                                        <Button fx:id="fastBack" text="⮜⮜" onAction="#handleFastBack"/>
                                        <Button fx:id="previousPage" text="⮜" onAction="#goToPreviousPage"/>
                                    </HBox>
                                    <TextField fx:id="currentPageField" alignment="CENTER" prefWidth="50" onAction="#goToPage"/>
                                    <Label fx:id="totalPageCountLabel"/>
                                    <HBox>
                                        <Button fx:id="nextPage" text="⮞" onAction="#goToNextPage"/>
                                        <Button fx:id="fastForward" text="⮞⮞" onAction="#handleFastForward"/>
                                        <Button fx:id="lastPage" text="⮞|" onAction="#goToLastPage"/>
                                    </HBox>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>

                <fx:include fx:id="detailsPane" source="details.fxml"/>
                
            </items>
        </SplitPane>
    </children>
</VBox>