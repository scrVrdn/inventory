<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.scrvrdn.inventory.controls.DynamicTextField?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="detailsPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="io.github.scrvrdn.inventory.controls.DetailsPane">
    <Label fx:id="nothingSelectedLabel" text="select an entry"/>
    <BorderPane fx:id="details" visible="false">
        <center>
            <ScrollPane>
                <VBox>
                    <HBox>
                        <Label text="Title" styleClass="details-label"/>
                        <DynamicTextField fx:id="titleField" styleClass="details-field"/>
                    </HBox>
                    <VBox fx:id="authorBox" >
                        <HBox styleClass="details-person-hbox">
                            <Label text="Author" styleClass="details-label"/>
                            <DynamicTextField fx:id="authorLastNameField" styleClass="details-field"/>
                            <Label text="," styleClass="details-delimiter"/>
                            <DynamicTextField fx:id="authorFirstNameField" styleClass="details-field"/>
                            <Region prefWidth="10" HBox.hgrow="ALWAYS"/>
                            <Button text="+" onAction="#addAuthorTextField" styleClass="details-person-button"/>
                            <Button text="-" onAction="#deleteAuthorTextField" styleClass="details-person-button"/>
                        </HBox>
                    </VBox>
                    <VBox fx:id="editorBox">
                        <HBox styleClass="details-person-hbox">
                            <Label text="Editor" styleClass="details-label"/>
                            <DynamicTextField fx:id="editorLastNameField" styleClass="details-field"/>
                            <Label text="," styleClass="details-delimiter" />
                            <DynamicTextField fx:id="editorFirstNameField" styleClass="details-field"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="+" onAction="#addEditorTextField" styleClass="details-person-button"/>
                            <Button text="-" onAction="#deleteEditorTextField" styleClass="details-person-button"/>
                        </HBox>
                    </VBox>
                    <HBox>
                        <Label text="Place" styleClass="details-label"/>
                        <DynamicTextField fx:id="publisherPlaceField" styleClass="details-field"/>
                    </HBox>
                    <HBox>
                        <Label text="Publisher" styleClass="details-label"/>
                        <DynamicTextField fx:id="publisherNameField" styleClass="details-field"/>
                    </HBox>
                    <HBox>
                        <Label text="Year" styleClass="details-label"/>
                        <DynamicTextField fx:id="yearField" styleClass="details-field"/>
                    </HBox>
                    <HBox>
                        <Label text="ISBN-10" styleClass="details-label"/>
                        <DynamicTextField fx:id="isbn10Field" styleClass="details-field"/>
                    </HBox>
                    <HBox>
                        <Label text="ISBN-13" styleClass="details-label"/>
                        <DynamicTextField fx:id="isbn13Field" styleClass="details-field"/>
                    </HBox>
                    <HBox>
                        <Label text="Shelf Mark" styleClass="details-label"/>
                        <DynamicTextField fx:id="shelfMarkField" styleClass="details-field"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </center>
        <bottom>
            <Button text="Save" onAction="#onSave"/>
        </bottom>
    </BorderPane>
</StackPane>